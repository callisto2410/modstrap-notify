{
  "name": "@ordinateio/notify",
  "version": "1.0.2",
  "description": "The implementation of simple notifications.",
  "main": "dist/notify.js",
  "types": "dist/notify.d.ts",
  "style": "dist/notify.css",
  "files": [
    "dist/**/*"
  ],
  "author": "Ordinate IO (https://github.com/ordinateio)",
  "license": "MIT",
  "homepage": "https://github.com/ordinateio/notify.git",
  "bugs": {
    "url": "https://github.com/ordinateio/notify.git/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ordinateio/notify.git.git"
  },
  "keywords": [
    "front-end",
    "ui",
    "typescript"
  ],
  "scripts": {
    "build": "npx tsc --project tsconfig.json && npx sass --no-source-map src/notify.scss dist/notify.css && npx copyfiles -u 1 src/assets/**/* dist",
    "build:all": "npm run build:clean && npm run build && npm run build:demo",
    "build:demo": "npx webpack --config demo/webpack.config.js",
    "build:demo:watch": "npx webpack --watch --config demo/webpack.config.js",
    "build:demo:server": "npx live-server ./demo",
    "build:clean": "npx rimraf .cache dist demo/dist *.tgz",
    "build:pack": "npm run build:clean && npm run build && npm pack",
    "build:publish": "npm publish --access public"
  },
  "devDependencies": {
    "@types/node": "^14.14.20",
    "autoprefixer": "^10.2.1",
    "copyfiles": "^2.4.1",
    "css-loader": "^5.0.1",
    "cssnano": "^4.1.10",
    "live-server": "^1.2.1",
    "postcss-loader": "^4.0.1",
    "rimraf": "^3.0.2",
    "sass": "^1.32.4",
    "sass-loader": "^10.1.1",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.14",
    "typescript": "^4.0.2",
    "webpack": "^5.14.0",
    "webpack-cli": "^4.3.1"
  },
  "dependencies": {
    "animate.css": "^4.1.1"
  }
}
